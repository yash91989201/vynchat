{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "update": "bun update --latest"
  },
  "dependencies": {
    "@orpc/client": "^1.9.0",
    "@orpc/openapi": "^1.9.0",
    "@orpc/server": "^1.9.0",
    "@orpc/zod": "^1.9.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@supabase/supabase-js": "^2.57.4",
    "@t3-oss/env-core": "^0.13.8",
    "better-auth": "^1.3.16",
    "dotenv": "^17.2.2",
    "drizzle-cuid2": "^2.1.0",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.8",
    "postgres": "^3.4.7",
    "resend": "^6.1.0",
    "zod": "^4.1.11"
  },
  "trustedDependencies": [
    "supabase"
  ],
  "devDependencies": {
    "@types/bun": "^1.2.22",
    "drizzle-kit": "^0.31.4",
    "supabase": "^2.45.5",
    "tsdown": "^0.15.4",
    "typescript": "^5.9.2"
  }
}
