{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@orpc/client": "^1.8.7",
    "@orpc/openapi": "^1.8.7",
    "@orpc/server": "^1.8.7",
    "@orpc/zod": "^1.8.7",
    "@t3-oss/env-core": "^0.13.8",
    "better-auth": "^1.3.9",
    "dotenv": "^17.2.2",
    "drizzle-cuid2": "^2.1.0",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.6",
    "pg": "^8.16.3",
    "zod": "^4.1.5"
  },
  "trustedDependencies": [
    "supabase"
  ],
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "tsdown": "^0.14.2",
    "typescript": "^5.9.2"
  }
}
